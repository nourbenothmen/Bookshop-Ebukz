{% extends 'admin/dashboard.html.twig' %}

{% block title %}Liste des Auteurs{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Liste des Auteurs</h1>
        <br>
        <a href="{{ path('admin_auteur_new') }}" class="btn btn-success">
            <i class="fa fa-plus me-1"></i> Créer un nouvel auteur
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for auteur in auteurs %}
                <tr>
                    <td>{{ auteur.id }}</td>
                    <td>{{ auteur.prenom }}</td>
                    <td>{{ auteur.nom }}</td>
                    <td class="text-center">
                        <a href="{{ path('admin_auteur_show', {'id': auteur.id}) }}" class="btn btn-info btn-sm me-1">
                            <i class="fa fa-eye"></i> Voir
                        </a>
                        <a href="{{ path('admin_auteur_edit', {'id': auteur.id}) }}" class="btn btn-primary btn-sm">
                            <i class="fa fa-edit"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">Aucun auteur trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
