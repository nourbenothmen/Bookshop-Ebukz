{% extends 'admin/dashboard.html.twig' %}

{% block title %}Ajouter un Livre{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4 py-3">
            <h3 class="mb-0">➕ Ajouter un nouveau livre</h3>
        </div>

        <div class="card-body">
            {{ include('admin/livre/_form.html.twig', { button_label: 'Enregistrer' }) }}
        </div>
  

        <div class="card-footer bg-light text-end rounded-bottom-4">
            <a href="{{ path('admin_livre_index') }}" class="btn btn-outline-secondary">
                ⬅ Retour à la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}
