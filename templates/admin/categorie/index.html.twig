{% extends 'admin/dashboard.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Liste des Catégories</h1>
        <br>
        <a href="{{ path('admin_categorie_new') }}" class="btn btn-success">
            <i class="fa fa-plus me-1"></i> Créer une nouvelle catégorie
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Désignation</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.designation }}</td>
                    <td class="text-center">
                        <a href="{{ path('admin_categorie_show', {'id': categorie.id}) }}" class="btn btn-info btn-sm me-1">
                            <i class="fa fa-eye"></i> Voir
                        </a>
                        <a href="{{ path('admin_categorie_edit', {'id': categorie.id}) }}" class="btn btn-primary btn-sm">
                            <i class="fa fa-edit"></i> Modifier
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center text-muted">Aucune catégorie trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
