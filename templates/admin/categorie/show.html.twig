{% extends 'admin/dashboard.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Détails de la Catégorie</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('admin_categorie_index') }}" class="btn btn-secondary">
                <i class="fa fa-arrow-left me-1"></i> Retour à la liste
            </a>
            <a href="{{ path('admin_categorie_edit', {'id': categorie.id}) }}" class="btn btn-primary">
                <i class="fa fa-edit me-1"></i> Modifier
            </a>
            {{ include('admin/categorie/_delete_form.html.twig') }}
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title mb-3">Catégorie: {{ categorie.designation }}</h5>

            <table class="table table-borderless mb-0">
                <tbody>
                    <tr>
                        <th style="width: 150px;">ID</th>
                        <td>{{ categorie.id }}</td>
                    </tr>
                    <tr>
                        <th>Désignation</th>
                        <td>{{ categorie.designation }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</div>
{% endblock %}
